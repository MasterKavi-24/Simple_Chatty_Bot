import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        // put your code here
        // scanning the input
        int input = scanner.nextInt();
        // calculating the sumOfDigits
        int a = input % 10;
        input /= 10;
        int b = input % 10;
        input /= 10;
        int c = input % 10;
        int sumOfDigits = a + b + c;
        // printing the output
        System.out.println(sumOfDigits);
    }
}